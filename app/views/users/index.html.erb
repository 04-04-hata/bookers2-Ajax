<html>

  <main>
    <p id="notice"></p>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>
            <% if @user.errors.any? %>
              <div class="error">
                <%= @user.errors.count %>error prohibited this obj from being saved:
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
              </div>
            <% end %>

          <table class="table table-hover table-inverse">
              <tbody>
                <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
                <tr>
                  <th>name</th>
                  	  <th><%= @user.name %></th>
                  </tr>
                <tr>
            	 <th>introduction</th>
            	  <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

            <div class="row">
             <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block", method: :get do %>
            <i class="fas fa-user-cog"></i>
              <% end %>
            </div>
            <h2 class="mt-3">New book</h2>

             <div class="form-group">
              <%= form_with model: @book, local: true do |f| %>
              <label for="book_title">Title</label><br>
              <%= f.text_field :title %><br>
              <label for="book_opinion">Opinion</label><br>
              <%= f.text_area :body %><br>
              <%= f.submit 'Create Book' ,class:"btn btn-success"%>
            <% end %>
            </div>
        </div>
              <div class="col-md-8 offset-md-1">
                <h2>Users</h2>
                <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th></th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <% @users.each do |user| %>
                <tbody>
                  <tr>
                    <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
                    <td><%= user.name %></td>
                    <td><%= link_to "Show", user_path(user) %></td>
                  </tr>
                </tbody>
                <% end %>
              </table>
            </div>
          </div>
        </div>
       </main>
   <footer>
        <div class="container mt-5">
        	<div class="row">
          	<div class="mx-auto">
          		<p>CopyRight Infratop.inc</p>
          	</div>
          </div>
        </div>
   </footer>
</html>

